{
    "name": "backend",
    "version": "1.0.0",
    "private": true,
    "main": "src/server.js",
    "imports": {
        "#src": "./src",
        "#common": "./src/common"
    },
    "engines": {
        "node": "18"
    },
    "scripts": {
        "start": "cp -R ../.next  ../backend && tsc --build ./tsconfig.json  &&  cross-env NODE_ENV=production node dist/src/server.js",
        "dev": "nodemon",
        "prebuild": "rm -rf ./dist",
        "build": "tsc --build ./tsconfig.json && cp ./.env.local ./dist/src/.env",
        "lint:check": "yarn lint:exec  .",
        "lint:ci": "yarn lint:exec  package.json $(git diff HEAD^ --diff-filter=d --name-only | tr '\n' ' ')",
        "lint:exec": "./node_modules/.bin/eslint --ext .tsx --ext .ts",
        "lint:fix": "eslint . --ext .ts --fix",
        "pretty:check": "yarn pretty:exec --check  '**/*.js' '**/*.ts' '**/*.tsx'",
        "pretty:ci": "yarn pretty:exec --check  package.json $(git diff HEAD^ --name-only | egrep '[.](js|ts|tsx)$' | tr '\n' ' ')",
        "pretty:exec": "./node_modules/.bin/prettier --config ./.prettierrc.js --ignore-unknown --no-error-on-unmatched-pattern",
        "pretty:fix": "yarn pretty:exec --write '**/*.js' '**/*.ts' '**/*.tsx'",
        "shell": "ts-node -P ./tsconfig.json",
        "test:ci": "NODE_ENV=ci DOTENV_CONFIG_PATH=$(pwd)/test/.env  node  node_modules/.bin/jest  --ci -i --detectOpenHandles --forceExit --config jest.config.js",
        "test:debug": "NODE_ENV=test DOTENV_CONFIG_PATH=$(pwd)/test/.env  node --inspect=localhost:9229 --inspect-brk  node_modules/.bin/jest  --no-coverage  --ci -i --detectOpenHandles --forceExit --config jest.config.js",
        "test:only": "NODE_ENV=test DOTENV_CONFIG_PATH=$(pwd)/test/.env TERM=dumb  node  node_modules/.bin/jest  -i --no-coverage --no-verbose  --detectOpenHandles --forceExit --config jest.config.js",
        "test:repl": "NODE_ENV=test DOTENV_CONFIG_PATH=$(pwd)/test/.env  node inspect  node_modules/.bin/jest  --no-coverage  -i --detectOpenHandles --forceExit --config jest.config.js",
        "test:setup": "yarn test:database  &&  yarn test:jest",
        "test": "NODE_ENV=test DOTENV_CONFIG_PATH=$(pwd)/test/.env  node  node_modules/.bin/jest  -i --detectOpenHandles --forceExit --config jest.config.js",
        "prestart": "npm run build",
        "format": "prettier --write ."
    },
    "dependencies": {
        "@mindpath/logger": "^0.0.3",
        "@types/cookie-parser": "^1.4.3",
        "@types/express-fileupload": "^1.4.1",
        "@types/jsonwebtoken": "^9.0.2",
        "@types/lodash": "^4.14.195",
        "@types/mongoose": "^5.11.97",
        "@types/nodemailer": "^6.4.8",
        "@types/uuid": "^9.0.2",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "cross-env": "^7.0.3",
        "crypto-random-string": "^3.3.1",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-fileupload": "^1.4.0",
        "html-pdf-node-ts": "^1.0.7",
        "http-status-codes": "^2.2.0",
        "joi": "^17.9.2",
        "jsonwebtoken": "^9.0.0",
        "moment": "^2.29.4",
        "mongoose": "^7.3.1",
        "next": "^13.4.7",
        "nodemailer": "^6.9.3",
        "nodemon": "^2.0.20",
        "prettier": "^2.7.1",
        "stripe": "12.17.0",
        "tsc": "^1.20150623.0",
        "typeorm": "^0.3.12",
        "typescript": "^5.1.3",
        "uuid": "^9.0.0",
        "winston": "^3.3.3",
        "yarn": "^1.22.19"
    },
    "devDependencies": {
        "@types/cors": "^2.8.13",
        "@types/express": "^4.17.17",
        "@types/node": "^20.3.1",
        "@typescript-eslint/eslint-plugin": "^5.39.0",
        "@typescript-eslint/parser": "^5.39.0",
        "eslint": "^8.24.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.2.1",
        "nodemon": "^2.0.20",
        "resolve-tspaths": "^0.7.4",
        "ts-node": "^10.9.1",
        "tsconfig-paths": "^4.1.0",
        "typescript": "^5.1.3"
    }
}
